@model IEnumerable<Texxty.Models.Blog>

@{
    ViewBag.Title = "Index";
}

<h2>My Blogs</h2>

<p>
    @Html.ActionLink("Create a new Blog", "Create", null, new { @class = "btn btn-outline-primary btn-sm" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Private)
        </th>
        <th>
            Topic
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Title, "Index","Post", new { id = item.BlogID }, null)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Private)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BlogTopic.Name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.BlogID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.BlogID })
        </td>
    </tr>
}

</table>
