@model IEnumerable<Texxty.Models.Post>

@{
    ViewBag.Title = "Feed";
}

<div class="row mb-4">
    <div class="col-md-2 mx-auto">
        @Html.ActionLink("Follow Topics", "FollowTopic", null, new { @class = "btn btn-outline-primary btn-sm" })
    </div>
</div>


@foreach (var item in Model)
{
    <div class="row">
        <div class="card col-md-8 mx-auto my-2">
            <div class="card-body">
                <h2 class="card-title my-4 text-center">@Html.ActionLink(item.Title, "PostDetails", "Post", new { id = item.PostID }, new { @class = "mx-auto " })</h2>
                <h6 class="card-subtitle mb-2 text-muted">@Html.DisplayFor(modelItem => item.PublishedDate)</h6>
                <p class="card-text">@Html.Raw(item.PostContent)</p>
                <a href="#" class="card-link">@Html.DisplayFor(modelItem => item.Blog.Title)</a>
            </div>
        </div>
    </div>
}
