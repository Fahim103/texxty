@model IEnumerable<Texxty.Models.Post>


    <p>
        @Html.ActionLink("Create a new Post", "Create", new { id = @ViewBag.BlogID}, new { @class = "btn btn-outline-primary btn-sm" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PublishedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ModifiedDate)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.Draft)
            </th>
            
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.ActionLink(item.Title, "Details", new { id = item.PostID })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PublishedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDate)
            </td>
            <td>
               @if (item.Draft == true) { <text> Draftt</text> } else { <text>  Published </text> }


            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.PostID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.PostID })
            </td>
        </tr>
    }
    
    </table>
